<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <h1>Altere sua senha</h1>
          <%= f.hidden_field :reset_password_token %>
          <div>
            <%= f.password_field :password, autofocus: true, placeholder: "Nova senha", class: "form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, placeholder: "ConfirmaÃ§Ã£o da nova senha", class: "form-control" %>
          </div>
          <div>
            <%= f.submit "Alterar senha", class: "btn btn-default submit", style: "float:none;margin-left:0;background-color:#fff;border-color:#999;width:70%" %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>