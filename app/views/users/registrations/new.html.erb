<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastro de Usuário</h1>
          <div>
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
          </div>
          <div>
            <%= f.password_field :password, placeholder: "Senha", class: "form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, placeholder: "Confirmação da senha", class: "form-control" %>
          </div>
          <div>
            <%= f.submit "Cadastrar-se", class: "btn btn-default submit", style: "float:none;margin-left:0;background-color:#fff;border-color:#999;width:70%" %>
          </div>
          <div class="clearfix"></div>
          <%#= render "users/shared/error_messages", resource: resource %>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>