// Hide modal window
$('#avatarModal').modal('hide');

// Change side bar avatar image
document.getElementById('imgAvatarSidebar').src = '<%= url_for @user.user_profile.avatar %>';

// Change navigation bar avatar image
document.getElementById('imgAvatarNav').src = '<%= url_for @user.user_profile.avatar %>';

// Change modal avatar image
document.getElementById('imgAvatarModal').src = '<%= url_for @user.user_profile.avatar %>';

// Show notice message to user
$.bootstrapGrowl('Avatar atualizado com sucesso!', {
    type: 'success',     // (null, 'info', 'danger', 'success')
    align: 'right',      // ('left', 'right', or 'center')
    allow_dismiss: true, // If true then will display a cross to close the popup.
    stackup_spacing: 10  // spacing between consecutively stacked growls.
});
